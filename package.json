{
  "name": "saucedemo",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "allure:gen": "allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "allure open ./allure-report",
    "test:q1": "playwright test tests/specs/loginLocked.spec.js --project=chromium",
    "test:q1:headed": "playwright test tests/specs/loginLocked.spec.js --headed --project=chromium",
    "test:q1:allure": "npm run test:q1 && npm run allure:gen && npm run allure:open",
    "test:q2": "playwright test tests/specs/checkout.spec.js --project=chromium",
    "test:q2:headed": "playwright test tests/specs/checkout.spec.js --headed --project=chromium",
    "test:q2:allure": "npm run test:q2 && npm run allure:gen && npm run allure:open",
    "test:q3": "playwright test tests/specs/performance.spec.js --project=chromium",
    "test:q3:headed": "playwright test tests/specs/performance.spec.js --headed --project=chromium",
    "test:q3:allure": "npm run test:q3 && npm run allure:gen && npm run allure:open",
    "test:all": "playwright test --workers=1 --project=chromium",
    "test:all:headed": "playwright test --workers=1 --project=chromium --headed",
    "test:all:allure": "npm run test:all && npm run allure:gen && npm run allure:open"
  },
  "author": "iftekhar_ahmed",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.5.2",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.1"
  }
}
